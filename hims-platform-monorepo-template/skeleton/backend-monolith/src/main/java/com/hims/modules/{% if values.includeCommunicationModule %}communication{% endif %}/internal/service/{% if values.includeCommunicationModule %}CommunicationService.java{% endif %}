package com.hims.modules.communication.internal.service;

import com.hims.core.audit.LogAudit;
import com.hims.core.events.EventPublisher;
import com.hims.core.events.EventMetadata;
import com.hims.core.tenant.TenantContext;
import com.hims.modules.communication.api.spi.CommunicationServiceProvider;
import com.hims.modules.communication.internal.repo.NotificationRepository;
import org.springframework.stereotype.Service;

import java.util.Map;

@Service
public class CommunicationService implements CommunicationServiceProvider {
    private final NotificationRepository repository;
    private final EventPublisher eventPublisher;
    public CommunicationService(NotificationRepository repository, EventPublisher eventPublisher) {
        this.repository = repository;
        this.eventPublisher = eventPublisher;
    }
    @LogAudit(action = "SEND_NOTIFICATION", resourceType = "NOTIFICATION", description = "Send notification")
    public void createExample() {
        String tenantId = TenantContext.getTenantId();
        String userId = TenantContext.getUserId();
        eventPublisher.publish("communication.notification.sent", Map.of("id", "example-id"), EventMetadata.create().withTenant(tenantId).withUser(userId).build());
    }
}

