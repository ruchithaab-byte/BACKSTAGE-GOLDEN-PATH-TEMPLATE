package com.hims.modules.inventory.internal.listener;

import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Component;

/**
 * Kafka event listener for Inventory module.
 * 
 * Pattern: Inventory Module (FEFO + Batch Tracking)
 * 
 * Listens to:
 * - clinical.prescription.created (to link inventory items)
 * - warehouse.stock.updated (to sync stock levels)
 */
@Component
public class InventoryEventListener {
    
    @KafkaListener(topics = "clinical.prescription.created", groupId = "inventory-service")
    public void handlePrescriptionCreated(String message) {
        // Placeholder - handle prescription created event
        // Link inventory items to prescription
    }
    
    @KafkaListener(topics = "warehouse.stock.updated", groupId = "inventory-service")
    public void handleStockUpdated(String message) {
        // Placeholder - handle stock update event
        // Sync stock levels
    }
}

