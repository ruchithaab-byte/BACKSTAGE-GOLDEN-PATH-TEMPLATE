package com.hims.modules.imaging.internal.web;

import com.hims.modules.imaging.api.spi.ImagingServiceProvider;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/api/v1/imaging")
public class ImagingController {
    private final ImagingServiceProvider service;
    public ImagingController(ImagingServiceProvider service) { this.service = service; }
    @GetMapping("/health")
    public String health() { return "imaging module is healthy"; }
}

