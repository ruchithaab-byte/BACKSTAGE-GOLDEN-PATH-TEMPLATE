package com.hims.modules.imaging.internal.repo;

import com.hims.modules.imaging.internal.domain.ImagingStudy;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Optional;
import java.util.UUID;

@Repository
public interface ImagingStudyRepository extends JpaRepository<ImagingStudy, UUID> {
    List<ImagingStudy> findByTenantId(UUID tenantId);
    Optional<ImagingStudy> findByTenantIdAndOrthancStudyId(UUID tenantId, String orthancStudyId);
    Optional<ImagingStudy> findByTenantIdAndDicomStudyUid(UUID tenantId, String dicomStudyUid);
    List<ImagingStudy> findByTenantIdAndPatientId(UUID tenantId, UUID patientId);
    List<ImagingStudy> findByTenantIdAndHasCriticalFinding(UUID tenantId, Boolean hasCriticalFinding);
}

