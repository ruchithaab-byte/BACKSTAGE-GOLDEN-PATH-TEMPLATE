package com.hims.modules.integration.internal.service;

import com.hims.core.audit.LogAudit;
import com.hims.core.events.EventPublisher;
import com.hims.core.events.EventMetadata;
import com.hims.core.tenant.TenantContext;
import com.hims.modules.integration.api.spi.IntegrationServiceProvider;
import com.hims.modules.integration.internal.repo.Hl7MessageLogRepository;
import org.springframework.stereotype.Service;

import java.util.Map;

@Service
public class IntegrationService implements IntegrationServiceProvider {
    private final Hl7MessageLogRepository repository;
    private final EventPublisher eventPublisher;
    public IntegrationService(Hl7MessageLogRepository repository, EventPublisher eventPublisher) {
        this.repository = repository;
        this.eventPublisher = eventPublisher;
    }
    @LogAudit(action = "LOG_HL7_MESSAGE", resourceType = "HL7_MESSAGE", description = "Log HL7 message")
    public void createExample() {
        String tenantId = TenantContext.getTenantId();
        String userId = TenantContext.getUserId();
        eventPublisher.publish("integration.hl7_message.received", Map.of("id", "example-id"), EventMetadata.create().withTenant(tenantId).withUser(userId).build());
    }
}

