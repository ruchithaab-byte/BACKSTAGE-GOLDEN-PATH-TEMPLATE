package com.hims.modules.documents.internal.repo;

import com.hims.modules.documents.internal.domain.Document;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.UUID;

@Repository
public interface DocumentRepository extends JpaRepository<Document, UUID> {
    List<Document> findByTenantId(UUID tenantId);
    List<Document> findByTenantIdAndPatientId(UUID tenantId, UUID patientId);
    List<Document> findByTenantIdAndDocumentTypeCode(UUID tenantId, String documentTypeCode);
    List<Document> findByTenantIdAndStatus(UUID tenantId, String status);
}

