package com.hims.modules.scheduling.internal.web;

import com.hims.modules.scheduling.api.spi.SchedulingServiceProvider;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

/**
 * REST controller for Scheduling module.
 */
@RestController
@RequestMapping("/api/v1/scheduling")
public class SchedulingController {
    private final SchedulingServiceProvider service;
    public SchedulingController(SchedulingServiceProvider service) { this.service = service; }
    @GetMapping("/health")
    public String health() { return "scheduling module is healthy"; }
}

