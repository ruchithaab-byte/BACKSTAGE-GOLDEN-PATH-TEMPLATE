package com.hims.modules.inventory.internal.web;

import com.hims.modules.inventory.api.spi.InventoryServiceProvider;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.UUID;

/**
 * REST controller for Inventory module.
 * 
 * Pattern: Inventory Module (FEFO + Batch Tracking)
 */
@RestController
@RequestMapping("/api/v1/inventory")
public class InventoryController {

    private final InventoryServiceProvider service;

    public InventoryController(InventoryServiceProvider service) {
        this.service = service;
    }

    /**
     * Health check endpoint.
     */
    @GetMapping("/health")
    public String health() {
        return "inventory module is healthy";
    }

    /**
     * Get items by location, sorted by FEFO.
     * 
     * Pattern: FEFO - Returns items with earliest expiry first.
     */
    @GetMapping("/locations/{locationId}/items/fefo")
    public String getItemsByFefo(@PathVariable UUID locationId) {
        // Placeholder - implement actual endpoint
        return "FEFO items for location: " + locationId;
    }

    /**
     * Get item by batch number.
     * 
     * Pattern: Batch Tracking
     */
    @GetMapping("/items/batch/{batchNumber}")
    public String getItemByBatch(@PathVariable String batchNumber) {
        // Placeholder - implement actual endpoint
        return "Item with batch: " + batchNumber;
    }
}

