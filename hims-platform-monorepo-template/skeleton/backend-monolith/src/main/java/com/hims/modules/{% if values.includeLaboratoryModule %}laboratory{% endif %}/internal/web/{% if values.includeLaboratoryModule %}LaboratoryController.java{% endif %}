package com.hims.modules.laboratory.internal.web;

import com.hims.modules.laboratory.api.spi.LaboratoryServiceProvider;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

/**
 * REST controller for Laboratory module.
 * 
 * Pattern: Laboratory Module (LIMS)
 */
@RestController
@RequestMapping("/api/v1/laboratory")
public class LaboratoryController {

    private final LaboratoryServiceProvider service;

    public LaboratoryController(LaboratoryServiceProvider service) {
        this.service = service;
    }

    @GetMapping("/health")
    public String health() {
        return "laboratory module is healthy";
    }

    @GetMapping("/samples/barcode/{barcode}")
    public String getSampleByBarcode(@PathVariable String barcode) {
        // Placeholder - implement actual endpoint
        return "Sample with barcode: " + barcode;
    }
}

