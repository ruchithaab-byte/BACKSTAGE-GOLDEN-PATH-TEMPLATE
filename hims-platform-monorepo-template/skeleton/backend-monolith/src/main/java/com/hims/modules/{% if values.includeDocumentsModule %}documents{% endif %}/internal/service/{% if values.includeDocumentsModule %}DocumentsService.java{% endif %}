package com.hims.modules.documents.internal.service;

import com.hims.core.audit.LogAudit;
import com.hims.core.events.EventPublisher;
import com.hims.core.events.EventMetadata;
import com.hims.core.tenant.TenantContext;
import com.hims.modules.documents.api.spi.DocumentsServiceProvider;
import com.hims.modules.documents.internal.repo.DocumentRepository;
import org.springframework.stereotype.Service;

import java.util.Map;

@Service
public class DocumentsService implements DocumentsServiceProvider {
    private final DocumentRepository repository;
    private final EventPublisher eventPublisher;
    public DocumentsService(DocumentRepository repository, EventPublisher eventPublisher) {
        this.repository = repository;
        this.eventPublisher = eventPublisher;
    }
    @LogAudit(action = "CREATE_DOCUMENT", resourceType = "DOCUMENT", description = "Create document")
    public void createExample() {
        String tenantId = TenantContext.getTenantId();
        String userId = TenantContext.getUserId();
        eventPublisher.publish("documents.document.created", Map.of("id", "example-id"), EventMetadata.create().withTenant(tenantId).withUser(userId).build());
    }
}

