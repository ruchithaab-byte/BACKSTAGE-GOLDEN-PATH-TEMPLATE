package com.hims.modules.imaging.internal.service;

import com.hims.core.audit.LogAudit;
import com.hims.core.events.EventPublisher;
import com.hims.core.events.EventMetadata;
import com.hims.core.tenant.TenantContext;
import com.hims.modules.imaging.api.spi.ImagingServiceProvider;
import com.hims.modules.imaging.internal.repo.ImagingStudyRepository;
import org.springframework.stereotype.Service;

import java.util.Map;

@Service
public class ImagingService implements ImagingServiceProvider {
    private final ImagingStudyRepository repository;
    private final EventPublisher eventPublisher;
    public ImagingService(ImagingStudyRepository repository, EventPublisher eventPublisher) {
        this.repository = repository;
        this.eventPublisher = eventPublisher;
    }
    @LogAudit(action = "CREATE_IMAGING_STUDY", resourceType = "IMAGING_STUDY", description = "Create imaging study")
    public void createExample() {
        String tenantId = TenantContext.getTenantId();
        String userId = TenantContext.getUserId();
        eventPublisher.publish("imaging.study.created", Map.of("id", "example-id"), EventMetadata.create().withTenant(tenantId).withUser(userId).build());
    }
}

