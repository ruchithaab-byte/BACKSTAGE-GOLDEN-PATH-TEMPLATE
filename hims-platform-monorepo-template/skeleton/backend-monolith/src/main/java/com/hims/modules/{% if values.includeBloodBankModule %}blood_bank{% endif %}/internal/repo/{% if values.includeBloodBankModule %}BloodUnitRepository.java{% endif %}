package com.hims.modules.blood_bank.internal.repo;

import com.hims.modules.blood_bank.internal.domain.BloodUnit;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import java.time.LocalDate;
import java.util.List;
import java.util.Optional;
import java.util.UUID;

/**
 * Repository for BloodUnit entity.
 * 
 * Pattern: Blood Bank Module
 * - Blood unit queries by status, blood group, expiry
 * - Available units for transfusion
 * - Expired units tracking
 */
@Repository
public interface BloodUnitRepository extends JpaRepository<BloodUnit, UUID> {
    
    // Tenant isolation
    List<BloodUnit> findByTenantId(UUID tenantId);
    
    // Find by unit number
    Optional<BloodUnit> findByTenantIdAndUnitNumber(UUID tenantId, String unitNumber);
    
    // Find by barcode
    Optional<BloodUnit> findByTenantIdAndBarcode(UUID tenantId, String barcode);
    
    // Find by blood group and status
    List<BloodUnit> findByTenantIdAndBloodGroupAndStatus(UUID tenantId, String bloodGroup, String status);
    
    // Find available units (not expired, available status)
    @Query("SELECT b FROM BloodUnit b WHERE b.tenantId = :tenantId AND b.bloodGroup = :bloodGroup AND b.status = 'available' AND b.isExpired = false AND b.expiryDate >= CURRENT_DATE ORDER BY b.expiryDate ASC")
    List<BloodUnit> findAvailableUnitsByBloodGroup(@Param("tenantId") UUID tenantId, @Param("bloodGroup") String bloodGroup);
    
    // Find expired units
    @Query("SELECT b FROM BloodUnit b WHERE b.tenantId = :tenantId AND (b.isExpired = true OR b.expiryDate < CURRENT_DATE) ORDER BY b.expiryDate ASC")
    List<BloodUnit> findExpiredUnits(@Param("tenantId") UUID tenantId);
    
    // Find units expiring soon (within N days)
    @Query("SELECT b FROM BloodUnit b WHERE b.tenantId = :tenantId AND b.expiryDate BETWEEN CURRENT_DATE AND :expiryDate AND b.status = 'available' ORDER BY b.expiryDate ASC")
    List<BloodUnit> findUnitsExpiringBy(@Param("tenantId") UUID tenantId, @Param("expiryDate") LocalDate expiryDate);
    
    // Find by donor
    List<BloodUnit> findByTenantIdAndDonorId(UUID tenantId, UUID donorId);
    
    // Find by component type
    List<BloodUnit> findByTenantIdAndComponentType(UUID tenantId, String componentType);
    
    // Find by status
    List<BloodUnit> findByTenantIdAndStatus(UUID tenantId, String status);
}

