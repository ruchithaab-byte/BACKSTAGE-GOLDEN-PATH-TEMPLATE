package com.hims.modules.terminology.internal.service;

import com.hims.core.audit.LogAudit;
import com.hims.core.events.EventPublisher;
import com.hims.core.events.EventMetadata;
import com.hims.core.tenant.TenantContext;
import com.hims.modules.terminology.api.spi.TerminologyServiceProvider;
import com.hims.modules.terminology.internal.repo.CodeSystemRepository;
import org.springframework.stereotype.Service;

import java.util.Map;

@Service
public class TerminologyService implements TerminologyServiceProvider {
    private final CodeSystemRepository repository;
    private final EventPublisher eventPublisher;
    public TerminologyService(CodeSystemRepository repository, EventPublisher eventPublisher) {
        this.repository = repository;
        this.eventPublisher = eventPublisher;
    }
    @LogAudit(action = "CREATE_CODE_SYSTEM", resourceType = "CODE_SYSTEM", description = "Create code system")
    public void createExample() {
        String tenantId = TenantContext.getTenantId();
        String userId = TenantContext.getUserId();
        eventPublisher.publish("terminology.code_system.created", Map.of("id", "example-id"), EventMetadata.create().withTenant(tenantId).withUser(userId).build());
    }
}

